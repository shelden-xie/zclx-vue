{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "module": "esnext",
        "lib": ["esnext"],
        "skipLibCheck": true
    },
    "include": ["src/*"]
}